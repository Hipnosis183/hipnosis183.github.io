---
// Import Astro components.
import HomeMobile from '@/components/mobile/Home.astro';

// Import Astro elements.
import { getCollection } from 'astro:content';

// Import language files.
const languages = await getCollection('i18n');
const language = languages.filter((v) => v.data.LANG == Astro.currentLocale)[0];
---

<!-- Home page. -->
<div class="home-container">
  <div>
    <!-- Home page image. -->
    <img class="home-image" src="/images/home.png" />
    <!-- Home page author. -->
    <div id="author" class="home-author">
      <div class="home-links">
        <a id="home-medium" target="_blank" rel="noopener noreferrer"
          href="https://medium.com/@renzopigliacampo" />
        <a id="home-twitter" target="_blank" rel="noopener noreferrer"
          href="https://twitter.com/HipnosisStuff" />
        <a id="home-github" target="_blank" rel="noopener noreferrer"
          href="https://github.com/Hipnosis183" />
        <a id="home-deviantart" target="_blank" rel="noopener noreferrer"
          href="https://deviantart.com/Hipnosis183" />
        <a id="home-linkedin" target="_blank" rel="noopener noreferrer"
          href="https://www.linkedin.com/in/renzo-pigliacampo/" />
        <a id="home-youtube" target="_blank" rel="noopener noreferrer"
          href="https://youtube.com/@RenzoPigliacampo" />
      </div>
      <p>{ language.data.SITE.AUTHOR }</p>
      <p>{ language.data.SITE.OCCUPATION }</p>
    </div>
    <!-- Home page sections. -->
    <div id="design" class="home-section">
      <p>{ language.data.HOME.DESIGN.TITLE }</p>
      <p>{ language.data.HOME.DESIGN.TEXT }</p>
    </div>
    <div id="coding" class="home-section">
      <p>{ language.data.HOME.CODING.TITLE }</p>
      <p>{ language.data.HOME.CODING.TEXT }</p>
    </div>
  </div>
</div>
<!-- Mobile home page. -->
<HomeMobile />

<style>
/* Home page. */
.home-container {
  align-items: center;
  display: flex;
  height: 100%;
  margin-left: auto;
  margin-right: auto;
  width: 90vw;
}
.home-container > div {
  align-items: center;
  display: flex;
  height: 100%;
  justify-content: space-between;
  max-height: 800px;
  position: relative;
  width: 100%;
}

/* Home page image. */
.home-image {
  bottom: 0;
  height: 100%;
  left: 0;
  object-fit: contain;
  position: absolute;
  right: 0;
  top: 0;
  width: 100%;
  mask-image: linear-gradient(top, rgba(0, 0, 0, 1) 60%, rgba(0, 0, 0, 0) 90%);
  -webkit-mask-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 1) 60%, rgba(0, 0, 0, 0) 90%);
}

/* Home page author. */
.home-author {
  align-items: center;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: flex-end;
  position: absolute;
  width: 100%;
}
.home-author > p:not(:last-child) {
  font-size: 3.6vw;
  font-weight: 900;
}
.home-author > p:last-child {
  font-size: 1.8vw;
  font-weight: 200;
}

/* Home page links. */
.home-links {
  align-items: center;
  border-bottom: 1px solid var(--color-grey);
  display: flex;
  margin-bottom: 0.8vw;
  padding-bottom: 0.8vw;
}
.home-links > a {
  background-color: var(--color-text);
  height: 3vw;
  margin-right: 0;
  transition: border-color 0.2s, transform 0.2s;
  width: 3vw;
}
.home-links > a:hover {
  transform: scale(1.2);
}
.home-links > a:not(:first-child) {
  margin-left: 10px;
}

/* Home page sections. */
.home-section {
  align-items: center;
  display: flex;
  flex-direction: column;
  margin-bottom: 6vw;
  max-width: 30vw;
  min-width: 30vw;
  text-align: center;
  z-index: 1;
}
.home-section > p:first-child {
  border-bottom: solid 1px var(--color-grey);
  display: flex;
  font-size: 3.6vw;
  font-weight: 900;
  justify-content: center;
  margin-bottom: 1.5vw;
  padding-bottom: 0.8vw;
  white-space: nowrap;
  width: 80%;
}
.home-section > p:last-child {
  font-size: 1.8vw;
  font-weight: 200;
  width: 30vw;
}

/* Home page icons. */
#home-medium {
  mask-image: url('/images/icons/logo-medium.svg');
  -webkit-mask-image: url('/images/icons/logo-medium.svg');
}
#home-twitter {
  mask-image: url('/images/icons/logo-twitter.svg');
  -webkit-mask-image: url('/images/icons/logo-twitter.svg');
}
#home-github {
  mask-image: url('/images/icons/logo-github-octocat.svg');
  -webkit-mask-image: url('/images/icons/logo-github-octocat.svg');
}
#home-deviantart {
  mask-image: url('/images/icons/logo-deviantart.svg');
  -webkit-mask-image: url('/images/icons/logo-deviantart.svg');
}
#home-linkedin {
  mask-image: url('/images/icons/logo-linkedin.svg');
  -webkit-mask-image: url('/images/icons/logo-linkedin.svg');
}
#home-youtube {
  mask-image: url('/images/icons/logo-youtube.svg');
  -webkit-mask-image: url('/images/icons/logo-youtube.svg');
}

/* Animations. */
#author.home-author {
  animation: 2s fade;
}
#coding.home-section > p:first-child {
  animation: 1s fade, 1s slide-left;
}
#coding.home-section > p:last-child {
  animation: 2s fade, 1.4s slide-left;
}
#design.home-section > p:first-child {
  animation: 1s fade, 1s slide-right;
}
#design.home-section > p:last-child {
  animation: 2s fade, 1.4s slide-right;
}
@keyframes fade {
  from { opacity: 0; }
  to { opacity: 1; }
}
@keyframes slide-left {
  from { margin-left: 200%; }
  to { margin-left: 0%; }
}
@keyframes slide-right {
  from { margin-right: 200%; }
  to { margin-right: 0%; }
}

/* Responsiveness. */
@media screen and (max-width: calc(768px - 1px)) {
  .home-container {
    display: none;
  }
}
</style>